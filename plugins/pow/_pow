#compdef pow-add pow-remove pow-restart
#autoload

local ret=1

case "$service" in
  (pow-add)
    _arguments "1:application:_files -/" && ret=0
  ;;
  (pow-(remove|restart))
    _arguments "1: :->pow-app" && ret=0
  ;;
esac

if [[ "$state" == 'pow-app' ]]; then
  _arguments '1:application:($HOME/.pow/*(@N:t))' && ret=0
fi

return "$ret"

